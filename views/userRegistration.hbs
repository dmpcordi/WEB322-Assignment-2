            alt='AirBNB Logo'
            width=50
            height=50
            />

            <!---->
            <!-- Navigation Bar -->
            <p><a href="/">Home</a> | 
                <a href="/roomListing">Room Listing</a> | 
                User Registration</p>
        </header>

        <hr>

        <main>
            
            <!---->
            <!-- Registration Section-->
            <section>

                <h2>Sign-Up Form</h2>

                <form action="/register-user" method="POST" enctype="multipart/form-data">
                    
                    <div id="sign_up">
                        <p>Sign up with 
                            <a href="https://www.facebook.com/login/?privacy_mutation_token=eyJ0eXBlIjowLCJjcmVhdGlvbl90aW1lIjoxNjI0MTM3ODI5LCJjYWxsc2l0ZV9pZCI6MzgxMjI5MDc5NTc1OTQ2fQ%3D%3D">
                                Facebook</a> or 
                            <a href="https://accounts.google.com/signin/v2/identifier?hl=en&continue=https%3A%2F%2Fwww.google.ca%2F%3Fsafe%3Dactive&ec=GAlAmgQ&flowName=GlifWebSignIn&flowEntry=AddSession">
                                Google</a>
                        </p>
                    </div>
                    

                    <fieldset>
                        <legend>OR</legend>

                         {{#if data.user_reg_invalid_flag}}
                                <p style="color:red;"><strong>Registration Form Incomplete -<span>{{data.errormsg}}</span> </strong></p>

                            {{/if}}   

                                                         

                        <div class="container">
                             <input id="email" name="email"  type="email" placeholder="Email Address" >

                            <input  id="fname" name="fname" type="text" placeholder="First Name" >
                            
                            <input  id="lname" name="lname" type="text" placeholder="Last Name" >
    
                            <input  id="password" name="password" type="password" placeholder="Create a Password" >

                            <br>
                            <br>
                            <label>Birthday</label>

                            <p id="sign_up_message">To sign up, you need to be at least 18. Other people who use AirBNB won't see your birthday.</p>

                            <div id="birthday">
                                <select id="month" class="birth" >
                                    <option disabled hidden selected>Month</option>
                                    <option value="1">January</option>
                                    <option value="2">February</option>
                                    <option value="3">March</option>
                                    <option value="4">April</option>
                                    <option value="5">May</option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>
                                </select>
    
                                <select id="day" class="birth" >
                                    <option disabled hidden selected>Day</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                    <option value="13">13</option>
                                    <option value="14">14</option>
                                    <option value="15">15</option>
                                    <option value="16">16</option>
                                    <option value="17">17</option>
                                    <option value="18">18</option>
                                    <option value="19">19</option>
                                    <option value="20">20</option>
                                    <option value="21">21</option>
                                    <option value="22">22</option>
                                    <option value="23">23</option>
                                    <option value="24">24</option>
                                    <option value="25">25</option>
                                    <option value="26">26</option>
                                    <option value="27">27</option>
                                    <option value="28">28</option>
                                    <option value="29">29</option>
                                    <option value="30">30</option>
                                    <option value="31">31</option>
                                </select>
    
                                <select id="year" class="birth"></select>
    
                                <script>
                                    (function () 
                                    {
                                        let year_satart = 1940;
                                        let year_end = (new Date).getFullYear(); // current year
                                        let year_selected = 1992;
                                
                                        let option = '';
                                        option = '<option disabled>Year</option>'; // first option
                                
                                        for (let i = year_satart; i <= year_end; i++) 
                                        {
                                            let selected = (i === year_selected ? ' selected' : '');
                                            option += '<option value="' + i + '"' + selected + '>' + i + '</option>';
                                        }
                                
                                        document.getElementById("year").innerHTML = option;
                                    })();
                                </script>
                            </div>
                            
                            <p id="sign_up_message">We'll send you marketing promotions, special offers, inspiration, and policy updates via email.</p>
                                
                            <button type="submit">Sign Up</button>
                            
                        </div>
                    </fieldset>
                    

                
                    
                </form>
            </section>
